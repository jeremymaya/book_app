<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include('../../layouts/head') %>
    <title>Document</title>
  </head>
  <body>
    <header>
        <%- include('../../layouts/header') %>
    </header>
    <main>
        <a href="/">Back to the list</a>
      <div data-id="<%= book.id %>" >
        <img src= <%= book.url %> >
        <h2><%= book.title %></h2>
        <h3><%= book.author %></h3>
        <p><%= book.description %></p>
        <section>
          <%- include('details') %>
        </section>
      </div> 
      <section>
        <h2>Add this book</h2>
        <form action="<%=`/update/${book.id}`%>" method="post">

          <input type = 'hidden' name='_method' value="put">

          <input type="text" name="title" value="<%- book.title %>" placeholder="Book Name">
          <input type="text" name="author" value="<%- book.author %>" placeholder="Book Title">
          <textarea name="description" placeholder="Description of the book" cols='30' rows='10'><%= book.description %></textarea>
          <input type='text' name='isbn' value='<%-book.isbn %>' placeholder="ISBN">
          <input type="text" name="status" placeholder="Bookshelf">
          <button type="submit">Add this book</button>
        </form>
      </section>
    </main>
    <footer>
        <%- include('../../layouts/footer') %>
    </footer>
  </body>
</html>