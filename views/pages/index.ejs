<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layouts/head') %>
    <title>Document</title>
  </head>
  <body>
    <header>
        <%- include('../layouts/header') %>
    </header>
    <main>
      <a href='pages/searches/new'>Search More Books</a>
      <div>
        <% searchResults.forEach(book => { %>
          <img src= <%= book.url %> >
          <h2><%= book.title %></h2>
          <h3><%= book.author %></h3>
          <p><%= book.description %></p>
          <a href="pages/books/<%= book.id %>">View Details</a>
        <% }) %>
      </div>
    </main>
    <footer>
      <%- include('../layouts/footer') %>
    </footer>
  </body>
</html>