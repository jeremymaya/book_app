  <h1>Hello World</h1>

  
    <form action='/searches/' method="POST">
      <input type="text" name="search" placeholder="title or author" required>
      <fieldset>
        <label for="title">
          <span>Title</span>
          <input type="radio" name="search" value="title" required>
        </label>
      </fieldset>

      <fieldset>
        <label for="author">
          <span>Author</span>
          <input type="radio" name="search" value="author" required>
        </label>
      </fieldset>

      <button type="submit">Search</button>
    </form>
  
</body>
